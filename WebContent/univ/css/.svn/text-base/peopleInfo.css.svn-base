	  h1 {
        text-align:center;
      }
	  table {
        margin:0 auto;
        height: 70%;
        width:90%;
        border:2px solid #aaa;
        border-collapse:collapse;
      }
      table th, table td {
        border:2px solid #aaa;
		height: 50px;
		width: 120px;
        padding:0px;
      }
      th {
        background-color:#eee;
      }
      input[type = "text"]{
     		height: 100%;
			width: 100%;
     		border:0px;
     }