html{
    height: 100%;
}
body{
    height: 100%;
}
.top{
    height: 100%;
    width: 100%;
    padding: 1.5625% 1.5625%;
    margin: 0;
    background-color: #f4f4f4;
}
.top-box{
    width: 100%;
    height: 100%;
    padding: 1.5625%;
    background-color: #ffffff;
}
.top-box-head{
    height: 7.96%;
    width: 100%;
    border-bottom: 1px solid #dddddd;
}
.top-box-head span{
    display: inline-block;
    font-size: 16px;
    margin-top: 2px;
    font-weight: bold;
    margin-bottom: 1.76%;
    padding-left: 8px;
    border-left: 4px solid #69baae;
}
.top-box-body{
    width: 100%;
    padding-top: 1.5625%;
}
.consultive-box-1,
.consultive-box-2,
.consultive-box-3,
.consultive-box-4{
    float: left;
    width: 23.5%;
    border: 1px solid #F3F3F3;
}
.consultive-box-2,
.consultive-box-3,
.consultive-box-4{
    margin-left: 1.5625%;
}
.consultive-box-1 img,
.consultive-box-2 img,
.consultive-box-3 img,
.consultive-box-4 img{
    width: 100%;
}
.consultive-box-1 .consultive-box-content,
.consultive-box-2 .consultive-box-content,
.consultive-box-3 .consultive-box-content,
.consultive-box-4 .consultive-box-content{
    width: 100%;
    /*height: 50px;*/
    background-color: #ffffff;
    position: relative;
    z-index: 100;
    padding-top: 15px;
}
.consultive-box-content .content-label{
    width: 50%;
    float: left;
    font-size: 1.25em;
    background-color: #ffffff;
    line-height: 2;
    padding-left: 10px;
}
.consultive-box-content .content-label:nth-child(3){
    width: 100%;
}
.consultive-box-1 .consultive-box-content{
    top: -50px;
}
.consultive-box-2 .consultive-box-content{
    top: -15px;
}
.consultive-box-3 .consultive-box-content{
    top: -35px;
}
.btn-self3{
    width: 80px;
    height: 30px;
    border: 1px solid #69baae;
    border-radius: 5px;
    font-size: 0.9em;
    background-color: #ffffff;
    margin: 10px;
}
.consultive-box-1{
    height: 361px;
}
.consultive-box-2{
    height: 396px;
}
.consultive-box-3{
    height: 376px;
}